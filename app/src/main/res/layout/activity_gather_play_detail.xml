<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.PlayDetailActivity">
    <RelativeLayout
        android:layout_margin="@dimen/y10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_alignParentLeft="true"

            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/host_arrow_orange_normal_left"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/host_image_share"
            />

    </RelativeLayout>
    <TextView
        android:gravity="center"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginRight="@dimen/x60"
        android:layout_marginLeft="@dimen/x60"
        android:id="@+id/tv_title"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:lines="2"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_marginTop="@dimen/y20"
        android:layout_marginBottom="@dimen/y40"
        android:layout_gravity="center"
        android:padding="4dp"
        android:id="@+id/iv_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
       />
    <LinearLayout
        android:layout_margin="@dimen/x40"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
   <SeekBar
       android:progressDrawable="@drawable/seek_bar"
       android:thumb="@drawable/shape_circle"
       android:maxHeight="2dp"
       android:id="@+id/seek_bar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/y20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentLeft="true"
                android:textSize="8sp"
                android:textColor="@color/kuaibao"
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="8sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/kuaibao"
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginRight="@dimen/x60"
            android:id="@+id/iv_left_play"
            android:background="@drawable/image_play_left_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_start_play"
            android:background="@drawable/host_rec_add_bg_pressed"
            android:src="@drawable/notify_btn_light_play2_normal"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ImageView
            android:layout_marginLeft="@dimen/x60"
            android:id="@+id/iv_right_play"
            android:background="@drawable/image_play_right_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
